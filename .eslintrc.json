{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:testing-library/react",
        "plugin:@compiled/recommended"
    ],
    "overrides": [
        {
            "files": [ "src/setupTest.js", "*.test.js" ],
            "rules": {
              "no-undef": 0
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
          "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "@compiled/no-styled-tagged-template-expression": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
